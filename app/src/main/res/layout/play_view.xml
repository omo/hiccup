<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/play_view_layout"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/app_primary_dark"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <es.flakiness.hiccup.play.PlayBarView
            android:id="@+id/play_view_bar"
            android:background="#ffffff"
            android:layout_margin="0dp"
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <TextView
            android:id="@+id/play_view_clock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/app_primary"
            android:textSize="60dp"
            android:gravity="center"
            android:text="XX:YY" />
    </LinearLayout>
    <es.flakiness.hiccup.play.PlayGestureView
        android:id="@+id/play_view_gesture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"/>
</FrameLayout>